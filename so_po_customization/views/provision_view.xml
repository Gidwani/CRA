<!-- views/provision_menus.xml -->
<odoo>
    <data>

        <record id="action_provision_sales" model="ir.actions.act_window">
            <field name="name">Sales Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', 'in', ['manager'])]</field>
            <field name="context">{'create': False, 'edit': False, 'from_provision_menu': True}</field>
            <field name="search_view_id" ref="sale.view_sales_order_filter"/>
        </record>

        <record id="action_provision_purchase" model="ir.actions.act_window">
            <field name="name">Purchase Orders</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', 'in', ['manager'])]</field>
            <field name="context">{'create': False, 'edit': False, 'from_provision_menu': True}</field>
            <field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
        </record>

        <record id="action_provision_invoice" model="ir.actions.act_window">
            <field name="name">Customer Invoices</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('move_type', '=', 'out_invoice'),('state', 'in', ['manager'])]</field>
            <field name="context">{'create': False, 'edit': False, 'default_move_type': 'out_invoice', 'from_provision_menu': True}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        </record>

        <record id="action_provision_bills" model="ir.actions.act_window">
            <field name="name">Vendor Bills</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('move_type', '=', 'in_invoice'),('state', 'in', ['manager'])]</field>
            <field name="context">{'create': False, 'edit': False, 'default_move_type': 'in_invoice', 'from_provision_menu': True}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        </record>

        <record id="action_provision_return_invoice" model="ir.actions.act_window">
            <field name="name">Customer Credit Notes</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('move_type', '=', 'out_refund'),('state', 'in', ['manager'])]</field>
            <field name="context">{'create': False, 'edit': False, 'default_move_type': 'out_refund', 'from_provision_menu': True}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        </record>

        <record id="action_provision_return_bill" model="ir.actions.act_window">
            <field name="name">Vendor Credit Notes</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('move_type', '=', 'in_refund'), ('state', 'in', ['manager'])('state', 'in', ['manager'])]</field>
            <field name="context">{'create': False, 'edit': False, 'default_move_type': 'in_refund', 'from_provision_menu': True}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        </record>

        <record id="action_provision_grn" model="ir.actions.act_window">
            <field name="name">Goods Received Notes</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('picking_type_code', '=', 'incoming'),('state', 'in', ['manager'])]</field>
            <field name="context">{'create': False, 'edit': False, 'from_provision_menu': True}</field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
        </record>

        <record id="action_provision_delivery" model="ir.actions.act_window">
            <field name="name">Delivery Orders</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('picking_type_code', '=', 'outgoing'),('state', 'in', ['manager'])]</field>
            <field name="context">{'create': False, 'edit': False, 'from_provision_menu': True}</field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
        </record>

         <!-- Main Provision Menu -->
        <menuitem
            id="menu_provision_root"
            name="Provision"
            sequence="10"
            web_icon="base,static/description/icon.png"
            groups="group_provision_access"/>

        <!-- Sales Submenu -->
        <menuitem
            id="menu_provision_sales"
            name="Sales"
            parent="menu_provision_root"
            action="action_provision_sales"
            sequence="10"
            groups="group_provision_sales"/>

        <!-- Purchase Submenu -->
        <menuitem
            id="menu_provision_purchase"
            name="Purchase"
            parent="menu_provision_root"
            action="action_provision_purchase"
            sequence="20"
            groups="group_provision_purchase"/>

        <!-- Invoice Submenu -->
        <menuitem
            id="menu_provision_invoice"
            name="Invoice"
            parent="menu_provision_root"
            action="action_provision_invoice"
            sequence="30"
            groups="group_provision_invoice"/>

        <!-- Bills Submenu -->
        <menuitem
            id="menu_provision_bills"
            name="Bills"
            parent="menu_provision_root"
            action="action_provision_bills"
            sequence="40"
            groups="group_provision_bills"/>

        <!-- Return Invoice Submenu -->
        <menuitem
            id="menu_provision_return_invoice"
            name="Return Invoice"
            parent="menu_provision_root"
            action="action_provision_return_invoice"
            sequence="50"
            groups="group_provision_return_invoice"/>

        <!-- Return Bill Submenu -->
        <menuitem
            id="menu_provision_return_bill"
            name="Return Bill"
            parent="menu_provision_root"
            action="action_provision_return_bill"
            sequence="60"
            groups="group_provision_return_bill"/>

        <!-- GRN Submenu -->
        <menuitem
            id="menu_provision_grn"
            name="GRN"
            parent="menu_provision_root"
            action="action_provision_grn"
            sequence="70"
            groups="group_provision_grn"/>

        <!-- Delivery Orders Submenu -->
        <menuitem
            id="menu_provision_delivery"
            name="Delivery Orders"
            parent="menu_provision_root"
            action="action_provision_delivery"
            sequence="80"
            groups="group_provision_delivery"/>

    </data>
</odoo>